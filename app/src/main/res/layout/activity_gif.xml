<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动gif动画"
        android:onClick="startGif"/>



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/lottie_amimation"
        app:lottie_fileName=""
        app:lottie_loop="true"
        app:lottie_autoPlay="false"/>

    <Button
        android:id="@+id/lottieAnimationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动/暂停lottie动画"
        android:onClick="startLottieGif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动other activity"
        android:onClick="startOtherActivity"/>



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv"/>

</LinearLayout>